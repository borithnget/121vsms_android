<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitle="back"
        app:subtitleTextColor="#FCFCFC" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:gravity="center_vertical"
            android:hint="  First Name"
            android:inputType="text"
            android:fontFamily="@font/lato_regular"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilLast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilFirst"
        android:layout_marginTop="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:gravity="center_vertical"
            android:hint="  Last Name"
            android:inputType="text"
            android:fontFamily="@font/lato_regular"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilLast">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:gravity="center_vertical"
            android:hint="  Store/Company Name"
            android:inputType="text"
            android:fontFamily="@font/lato_regular"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/About"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Store">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:gravity="center_vertical"
            android:hint="  About Shop/Company"
            android:inputType="text"
            android:fontFamily="@font/lato_regular"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/WingAccount1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/About">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:gravity="center_vertical"
            android:hint="  Wing Account Number"
            android:inputType="number"
            android:fontFamily="@font/lato_regular"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/WingAccount2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WingAccount1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:gravity="center_vertical"
            android:hint="  Wing Account Name"
            android:inputType="text"
            android:fontFamily="@font/lato_regular"
            android:textSize="12sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WingAccount2"
        android:id="@+id/Phone1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:gravity="center_vertical"
            android:hint="  Phone 1"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:textSize="12sp"
            android:fontFamily="@font/lato_regular"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Phone1"
        android:id="@+id/Address">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_check_box_black_24dp"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:hint="  Address"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:clickable="true"
            android:fontFamily="@font/lato_regular" />
    </android.support.design.widget.TextInputLayout>

    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Address" />

    <!--
    <Button
        android:id="@+id/button"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/WingAccount2"
        android:layout_marginTop="17dp"
        android:background="#FFFFFF"
        android:layout_marginRight="4dp"
        android:layout_alignRight="@+id/Phone1"
        android:drawableBottom="@drawable/ic_add_circle_outline_black_24dp"
        android:text="" />
        -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/mapView"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato_bold"
        android:textSize="12dp"
        android:background="#f5af19"
        android:textColor="#FFFFFF"/>
</LinearLayout>