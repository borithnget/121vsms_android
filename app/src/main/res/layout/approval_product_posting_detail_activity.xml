<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_white">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">
        </android.support.v4.view.ViewPager>

        <com.viewpagerindicator.CirclePageIndicator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/indicator"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:foregroundGravity="bottom"
            app:fillColor="#df0623"
            app:pageColor="#fff"
            app:snap="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutPostHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/textViewProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold"
            android:text="Honda Dream C125 2019"
            android:textColor="@color/color_black"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLocationDuration"
            android:layout_below="@id/textViewProductTitle"
            android:fontFamily="@font/lato_bold"
            android:textSize="10sp"
            android:text="Phnom Penh - 23 hrs ago"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPrice"
            android:layout_below="@id/textViewLocationDuration"
            android:fontFamily="@font/lato_bold"
            android:textSize="20sp"
            android:textColor="@color/color_red"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="$ 1900"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutPostHeader"
        android:background="@color/color_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/color_black"
            android:textSize="14dp"
            android:text="Description"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/textViewDescriptionTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTaxTypeTitle"
            android:layout_below="@id/textViewDescriptionTitle"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text="Tax Type: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTaxtype"
            android:layout_below="@id/textViewDescriptionTitle"
            android:layout_toRightOf="@id/textViewTaxTypeTitle"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/color_black"
            android:text="Plate Number"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBrandTitle"
            android:layout_below="@id/textViewTaxTypeTitle"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text="Brand: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBrand"
            android:layout_below="@id/textViewTaxTypeTitle"
            android:layout_toRightOf="@id/textViewBrandTitle"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/color_black"
            android:text="Honda"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewYearTitle"
            android:layout_below="@id/textViewBrandTitle"
            android:fontFamily="@font/lato_regular"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:text="Year: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewYear"
            android:layout_below="@id/textViewBrandTitle"
            android:layout_toRightOf="@id/textViewYearTitle"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/color_black"
            android:text="2019"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"/>

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#40000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </android.support.v7.widget.Toolbar>

</RelativeLayout>