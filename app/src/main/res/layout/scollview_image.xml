<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8F949494">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:id="@+id/relativeLayout"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:background="#FDFFFFFF"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="181dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:background="#00ECECE8"
            android:scaleType="fitXY"
            android:src="@drawable/dream_c125"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:text="Honda Dream c125"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="10dp"
            android:text="$2000"
            android:textColor="#F30303"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="20mn ago"
            android:textColor="#A6635D5D"
            android:fontFamily="@font/lato_regular"
            android:textSize="10sp"
            android:gravity="right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#FDFFFFFF"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view1"
            android:layout_width="181dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:background="#00ECECE8"
            android:scaleType="fitXY"
            android:src="@drawable/dream_c125"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:text="Honda Dream c125"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="10dp"
            android:text="$1800"
            android:textColor="#F30303"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="1mn ago"
            android:textColor="#585555"
            android:fontFamily="@font/lato_regular"
            android:textSize="10sp"
            android:gravity="right"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>