<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
            android:background="@drawable/my_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/image_honda_dream"
                android:id="@+id/image_view"
                android:layout_width="170dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txtbrand"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:text="Honda Dream c125"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/txtposton"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Post on 2h ago"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/txtbrand" />

            <TextView
                android:id="@+id/txtrenew"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:text="Renew on 3h ago"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/txtposton" />
            <TextView
                android:id="@+id/txtprice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="$ 1800 "
                android:textColor="#FF0000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/txtrenew" />
            <Button
                android:id="@+id/btn_menu"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="#00F8F4F4"
                android:drawableRight="@drawable/menu_vertical_30px"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/btn_delect"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_delect"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_delect"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#00F8F4F4"
                android:drawableLeft="@drawable/ic_delete_black_24dp"
                android:text="Delect"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/btn_edit"
                app:layout_constraintEnd_toStartOf="@+id/btn_menu"
                app:layout_constraintStart_toEndOf="@+id/btn_edit"
                app:layout_constraintTop_toTopOf="@+id/btn_edit" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#00F8F4F4"
                android:drawableLeft="@drawable/edit_30px"
                android:text="Edit"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/btn_transfer"
                app:layout_constraintEnd_toStartOf="@+id/btn_delect"
                app:layout_constraintStart_toEndOf="@+id/btn_transfer"
                app:layout_constraintTop_toTopOf="@+id/btn_transfer" />
            <Button
                android:id="@+id/btn_transfer"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp"
                android:background="#00F8F4F4"
                android:drawableLeft="@drawable/transfer_30px"
                android:text="Transfer"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/btn_edit"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>