<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="1dp"
        app:cardMaxElevation="2dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/dream_c125"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="Honda Dream c125"
                android:id="@+id/txt_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/image_view"
                android:fontFamily="@font/lato_bold"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:text="Post On: 2h ago"
                android:layout_below="@+id/txt_post_title"
                android:id="@+id/txt_post_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_view"
                android:fontFamily="@font/lato_regular"
                android:textSize="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:text="Renew On: 3h ago"
                android:layout_below="@+id/txt_post_at"
                android:id="@+id/txt_renew_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_view"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:textSize="8dp"/>

            <TextView
                android:text="$1800"
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/image_view"
                android:textSize="14dp"
                android:textColor="#FF0000"
                android:layout_above="@+id/tab_action"
                android:fontFamily="@font/lato_bold" />

            <RelativeLayout
                android:background="@drawable/my_border"
                android:layout_below="@id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/tab_action">
                <Button
                    android:id="@+id/btn_Edit"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="#00F8F4F4"
                    android:drawableLeft="@drawable/ic_square_edit_outline"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:layout_toLeftOf="@id/btn_delete"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/btn_share"
                    android:background="#00F8F4F4"
                    android:drawableLeft="@drawable/ic_trash_can_outline"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:gravity="center"/>

                <Button
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_share"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="8dp"
                    android:background="#00F8F4F4"
                    android:drawableLeft="@drawable/ic_share_variant"
                    android:gravity="right" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>