<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardView_point"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:id="@+id/main_relative"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            style="@style/Divider"
            />
        <ImageView
            android:id="@+id/dream"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:padding="0.75dp"/>

        <TextView
            android:id="@+id/model_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/dream"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="#0C0202"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/posted_1"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/model_1"
            android:layout_toRightOf="@+id/dream"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/amount_1"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/posted_1"
            android:layout_toRightOf="@+id/dream"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF0000"/>

        <TextView
            android:id="@+id/color_1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dream"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/brand_1"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/category_1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/color_1"/>

        <TextView
            android:id="@+id/year_1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/brand_1"
            android:layout_below="@+id/category_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>